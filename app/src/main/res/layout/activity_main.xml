<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/nuvei_logo"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:src="@drawable/nuvei_logo"
        app:layout_constraintEnd_toStartOf="@+id/sdk_title"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/simulationButton"
        app:layout_constraintVertical_chainStyle="packed"  />


    <TextView
        android:id="@+id/sdk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/sdk_label"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/nuvei_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nuvei_logo"
        app:layout_constraintTop_toTopOf="@+id/nuvei_logo"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/simulationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/init_env"
        android:textSize="17sp"
        app:cornerRadius="10dp"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuvei_logo"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>